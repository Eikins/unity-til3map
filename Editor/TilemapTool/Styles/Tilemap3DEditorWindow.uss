.tilemap-toolbar-container {
    height: 32px;
}

#tilemap-toolbar {
    min-height:32px;
}

#body {
    align-items: center;
    width: 100%;
    height: 100%;
}

.tile-element {
    border-width: 1px;
    background-color: #FFFFFF;
    width: 32px;
    height: 32px;
}

.palette-view {
    width: 100%;
    height: 100%;
}

.palette-container {
    width: 100%;
    height: 100%;
    border-width: 4px;
    border-color: rgb(60, 60, 60);
}